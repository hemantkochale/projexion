<div id="content">
  <% if flash[:notice] %><p class="success"><%= flash[:notice] %></p><% end %>
  
  <div id="releases">
    <h1>Releases in <%= @project.name %></h1>

    <% for release in @releases %>
    <div style="margin-bottom:1.5em;">
      <h2 class="card"><%= link_to release.version_number, project_release_path(@project.code, release.id) %></h2>
      <div><strong>Estimate release date</strong>:&nbsp;<%= release.estimate_date %></div>
      <% unless release.goal.blank? %><div><strong>Release goal</strong>:&nbsp;<%= release.goal %></div><% end %>
      <% unless release.released_at.nil? %><div><strong>Released at</strong>:&nbsp;<%= release.released_at %></div><% end %>
    </div>
    <% end %>


    <%= will_paginate @releases %>
  </div>
</div>

<div id="sidebar">
  <ul id="menu">
    <li><%= link_to 'Add New Release', new_project_release_path(@project.code), :class => 'add', :rel => :facebox, :remote => true %></li>
  </ul>
</div>