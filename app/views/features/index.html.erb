<% content_for :title do %><%= @project.name %>&nbsp;Features&nbsp;:&nbsp;<%= @current_account.company.name %><% end %>

<div id="content">
  <div class="panel">
    <%= form_tag project_features_path, :method => :get do %>
    <table width="100%">
      <tr>
        <td><strong>User story</strong></td>
        <td><%= text_field_tag :user_story %></td>
        <td><strong>Priority</strong></td>
        <td><%= select_tag(:priority, options_from_collection_for_select_with_blank(@priorities, :name, :display_name)) %></td>
      </tr>
      <tr>
        <td><strong>Sprint</strong></td>
        <td><%= select_tag(:sprint, options_from_collection_for_select_with_blank(@sprints, :name, :display_name)) %></td>
        <td><strong>Release</strong></td>
        <td><%= select_tag(:release, options_from_collection_for_select_with_blank(@releases, :version_number, :version_number)) %></td>
      </tr>
      <tr>
        <td><strong>Status</strong></td>
        <td><%= select_tag(:status, options_from_collection_for_select_with_blank(@feature_statuses, :display_name, :display_name)) %></td>
        <td></td>
        <td style="text-align:right;"><%= submit_tag "Search", :name => nil, :id => 'search-button' %></td>
      </tr>
    </table>

    <% end %>
  </div>

  <%= render :partial => "features/list" %>
  <%= will_paginate @features %>
  
  <div style="clear:both"></div>
</div>

<div id="sidebar">
  <ul id="menu">
    <li><%= link_to 'Add New Feature', new_project_feature_path(@project.code), :class => 'add', :rel => :facebox %></li>
  </ul>  
</div>