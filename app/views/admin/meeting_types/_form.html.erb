<%= render 'shared/title/form', :target => @meeting_type %>

<div id="content">
    <p class="success"><span ><%= flash[:notice] %></span></p>

    <%= form_for ([:admin, @meeting_type]) do |f| %>
        <%= render "shared/error_messages", :target => @meeting_type %>

        <p>
            <%= f.label :name %><br/>
            <%= f.text_field :name %>
        </p>

        <p>
          <%= f.label :occurrence %><br/>
          <%= f.text_field :occurrence %>
        </p>

        <p>
            <%= f.label :description %><br/>
            <%= f.text_area :description, :size => "35x4" %>
        </p>

        <p>
          <%= f.submit 'Save', :class=> 'save_btn' %>
        </p>
     <% end %>
     <%= button_to 'Cancel', admin_meeting_types_path, :confirm => "Are you sure?", :method => :get, :class=> 'cancel_btn' %>
</div>

<div id="sidebar">
  <ul>
    <li><%= link_to 'Meeting Types', admin_meeting_types_path, :class => 'list' %></li>
  </ul>
</div>